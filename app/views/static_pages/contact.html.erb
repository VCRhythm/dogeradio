<h3 class="underlined-header">Contact Tristan at DogeRadio!</h3>
<%= form_tag '/send_contact', role: "form", remote: true do %>
  <div class="form-group">
    <%= label_tag "user_email", "Your e-mail address" %>
    <%= email_field "user", "email", class: "form-control", placeholder: "Enter your e-mail so we can respond." %>
  </div>
  <div class="form-group">
    <%= label_tag :message, "Your message" %>
    <%= text_area_tag :message, nil, class: "form-control", rows: "3" %>
  <%= submit_tag "Send", class: "btn btn-default btn-block", style: "margin-top:10px" %>
<% end %>