<ul id="playlist" class="list-group sortable" data-playlist_id="<%=@playlist.id %>" <% if hidden %>style="display:none;"<% end %>>
	<% playlist_counter = 1 %>
	<% @playlist.tracks.each do |track| %>
		<%= render partial: 'tracks/playlist_item', locals: {track: track, playlist_counter: playlist_counter} %>
		<% playlist_counter += 1 %>
	<% end %>
</ul>