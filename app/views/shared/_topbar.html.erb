<div class="row" id="topbar">
	<div class="col-sm-12">
		<div class="content-block">
			<button type="button" id="maximize-sidebar" class="btn btn-default btn-xs pull-right"><span class="glyphicon glyphicon-resize-full"></span></button>
			<%= render partial: 'shared/ticker' %>
			<div id="player"><%= render partial: "tracks/topplayer", locals: {track: @track, position: @player_position } %></div>
			<%= render partial: 'shared/playlist', locals: { hidden: true } %>
		</div>
	</div>
</div>
<script>
	$("#topbar").slideDown();
</script>