<h3>Add Artists to <%=@event.name%></h3>
<%= form_tag event_add_user_index_path(@event), class: "form-horizontal", role: "form", style: "padding-bottom:10px", remote: true, authenticity_token: true do %>
	<div class="form-group">
		<%= label_tag "Artists", nil, class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= collection_select(:event, :users, @users, :id, :display_name, {include_hidden:false}, {multiple: true, class: "form-control"}) %>
		</div>
	</div>
	<%= submit_tag "Submit", class: "btn btn-primary btn-block", remote: true %>
<% end %>
<%= button_to "Cancel", @event.venue, method: :get, remote: true, class: "btn btn-danger btn-block remote-link", form_class: "btn-block" %>
