<%= form_for [@venue, @event], html:{class: "form-horizontal", role: "form"}, remote: true do |f| %>
	<div class="form-group">
		<%= f.label :name, class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_field :name, class: "form-control" %>
		</div>		
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<div class="input-group date form_datetime">
				<span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
				<%= f.text_field :when, readonly:"true", class: "form-control" %>
			</div>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :description, "Details", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_area :description, class: "form-control" %>
		</div>		
	</div>
	<div class="form-group text-center">
		<%= f.submit "Submit", class: "btn btn-primary" %>
	</div>
<% end %>

<script>
	$(".form_datetime").datetimepicker({
		format: 'MM dd, yyyy at HH:ii',
		showMeridian: true,
		todayBtn: true,
		autoclose: true,
		todayHighlight: true
	});
</script>