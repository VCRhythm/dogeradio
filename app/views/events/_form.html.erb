<%= form_for [@venue, @event], html:{class: "form-horizontal", role: "form"}, remote: true do |f| %>
	<div class="form-group">
		<%= f.label :name, class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :moment, "When", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<div class="input-group date" id="datetimepicker">
				<span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
				<% if @event.moment %>
					<%= f.text_field :moment, value: @event.moment.strftime("%m/%d/%Y %I:%M %p"), class: "form-control datetimepicker" %>
				<% else %>
					<%= f.text_field :moment, class: "form-control datetimepicker" %>
				<% end %>
			</div>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :description, "Details", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_area :description, class: "form-control" %>
		</div>
	</div>
	<div class="form-group text-center">
		<%= f.submit "Submit", class: "btn btn-primary", remote: true %>
	</div>
<% end %>

<script>
	$("#datetimepicker").datetimepicker();
</script>