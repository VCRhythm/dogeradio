<% count = 0 %>
<% date = 0 %>
<ul class="list-group">
<% events.each do |event| %>
	<% if date != event.moment.to_date %>
		<% date = event.moment.to_date %>
		<h4><%= date.strftime("%m/%d/%Y") %></h4>
	<% end %>
	<li class="list-group-item" style="display: inline-flex; padding:0; width:100%; height:104px; overflow:hidden; border: solid 2px white; background: none">
	<div style="width:100%; height:100px; display: table-cell; padding-right: 50px">
		<div style="height:50px; font-size: 20px; padding:5px; vertical-align:middle; overflow:hidden; display:table-cell"><%= link_to event.name, event, remote: true, class: "remote-link" %></div>
		<div style="height:50px; overflow:hidden">
			<% event.users.each do |user| %>
				<%= link_to user, remote: true, class: "remote-link", style: "display:table-cell" do %><%= image_tag user.avatar(:tinythumb), class: "user-image", data:{toggle:"tooltip", placement:"bottom", title: user.display_name} %><% end %>
			<% end %>
		</div>
	</div>
	<div style="position: absolute; right:0">
		<div style="height:50px; width:50px; text-align:center; vertical-align:middle; padding-bottom:5px; font-size:45px">@</div>
		<%= link_to event.venue, remote: true, class: "remote-link" do %><%= image_tag event.venue.avatar(:tinythumb), class: "venue-image", data:{toggle:"tooltip", placement:"bottom", title: event.venue.name} %><% end %>
	</div>
	</li>
<% count += 1 %>
<% end %>
</ul>