<h3>Add Artists to <%=@event.name%></h3>
<%= form_tag event_add_user_index_path(@event), html:{class: "form-horizontal", role: "form"}, remote: true do %>
	<div class="form-group">
		<%= label_tag "Artists", nil, class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= collection_select(:event, :users, @users, :id, :display_name, {include_hidden:false}, {multiple: true, class: "form-control"}) %>
		</div>		
	</div>
	<div class="form-group text-center">
		<%= submit_tag "Submit", class: "btn btn-primary", remote: true %>
	</div>
<% end %>