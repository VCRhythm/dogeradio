<%= render partial: 'shared/favorite_form', locals: {track: track} if signed_in? %>
<% if track.user != current_user %>
	<%= link_to pay_path(track.user, user: {track_id: track.id, method:"tip"}), method: :post, remote: true do %>
		<%= image_tag 'dogecoin-tip-icon.png', alt: 'Tip!', id: "pay-user-track-link", data: {toggle:"tooltip", placement:"top", title:"Send thanks!"} %>
	<% end %>
<% end %>
<script>
	$(document).ready(function(){
		$('#pay-user-track-link').tooltip();
	});
</script>