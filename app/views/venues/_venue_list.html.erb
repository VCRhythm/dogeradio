<% if venues.length > 0 %>
	<% venues.each do |venue| %>
		<%= link_to venue, remote: true, class: "remote-link" do %><%= image_tag venue.avatar(:thumb), class: "venue-image", data: {toggle:"tooltip", placement:"bottom", title: venue.name} %><% end %>
	<% end %>
<% else %>
	<p>No venues found.</p>
<% end %>
<script>
	$('.venue-image').tooltip();
</script>