<%= form_for @venue, html:{class: "form-horizontal", role: "form"}, authenticity_token: true, remote: true do |f| %>
	<div class="form-group">
		<%= f.label :name, class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_field :name, class: "form-control" %>
		</div>		
	</div>
	<div class="form-group">
		<%= f.label :avatar, class: "col-sm-2 control-label" %><br/>
		<div class="col-sm-10">
			<%= f.file_field :avatar, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :description, "Details", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_area :description, class: "form-control" %>
		</div>		
	</div>
	<div class="form-group">
		<%= f.label :street, class: "col-sm-2 control-label address-form" %>
		<div class="col-sm-10">
			<%= f.text_field :street, class: "form-control address-form" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :city, class: "col-sm-2 control-label address-form" %>
		<div class="col-sm-10">
			<%= f.text_field :city, class: "form-control address-form" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :state, class: "col-sm-2 control-label address-form" %>
		<div class="col-sm-10">
			<%= f.text_field :state, class: "form-control address-form" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :zipcode, class: "col-sm-2 control-label address-form" %>
		<div class="col-sm-10">
			<%= f.text_field :zipcode, class: "form-control address-form" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :country, class: "col-sm-2 control-label address-form" %>
		<div class="col-sm-10">
			<%= f.text_field :country, class: "form-control address-form" %>		
		</div>
	</div>
	<div class="form-group text-center">
		<%= f.submit "Submit", class: "btn btn-primary", remote: true %>
	</div>
<% end %>
