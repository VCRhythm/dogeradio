<%= form_for Venue.new, html:{class: "form-horizontal", role: "form"}, remote: true do |f| %>
	<div class="form-group">
		<%= f.label :name, class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_field :name, class: "form-control" %>
		</div>		
	</div>
	<div class="form-group">
		<%= f.label :description, "Details", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_area :description, class: "form-control" %>
		</div>		
	</div>
	<div class="form-group">
		<%= f.label :street, class: "col-sm-2 control-label address-form" %>
		<div class="col-sm-10">
			<%= f.text_field :street, class: "form-control address-form" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :city, class: "col-sm-2 control-label address-form" %>
		<div class="col-sm-10">
			<%= f.text_field :city, class: "form-control address-form" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :state, class: "col-sm-2 control-label address-form" %>
		<div class="col-sm-10">
			<%= f.text_field :state, class: "form-control address-form" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :zipcode, class: "col-sm-2 control-label address-form" %>
		<div class="col-sm-10">
			<%= f.text_field :zipcode, class: "form-control address-form" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :country, class: "col-sm-2 control-label address-form" %>
		<div class="col-sm-10">
			<%= f.text_field :country, class: "form-control address-form" %>		
		</div>
	</div>
	<div class="form-group">
		<%= f.submit "Submit", class: "col-sm-offset-3 col-sm-8 btn btn-primary" %>
	</div>
<% end %>
