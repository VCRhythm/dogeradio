<h3><strong><%= track.name %></strong></h3>
<h4><%= track.user.username %></h4>
<%= form_for [track, @tag], html: {class: "form-inline", role: "form"}, remote: true do |f| %>
  <div class="form-group">
    <%= f.select :category, options_for_select([["Genre", {class:"tag-genre"}],["City", {class: "tag-city"}],["Style", {class:"tag-style"}],["Trend", {class: "tag-trend"}]]), {}, class: "form-control input-sm tag-form" %>
  </div>
  <div class="form-group">
    <%= f.text_field :description, class: "form-control input-sm", placeholder: "Description" %>
  </div>
  <%= f.submit 'Add Tag', class: "btn btn-primary" %>
<% end %>
