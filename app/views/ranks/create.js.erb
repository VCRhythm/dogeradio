if(!$("#player-heading").length){
	$("#player").html("<%= j render partial: 'tracks/player', locals: {track:@track, position: 1} %>");
	restartPlayer();
}
$("#playlist").append("<%= j render partial: 'tracks/playlist_item', locals: {track: @track, playlist_counter: 0}%>");
playlist_counter = 0;
$('.playlist-item').each(function(i, value){
	playlist_counter+=1;
	$(this).removeAttr('id').attr('id', 'playlist_'+playlist_counter).attr("data-playlist_number", playlist_counter);
	track_id = $(this).data("track_id");
	$(this).children('.delete-div').children('.delete-link').attr('href', "/playlists/<%= @playlist.id %>/ranks?rank[track_id]="+track_id+"&rank[position]="+playlist_counter);
});
