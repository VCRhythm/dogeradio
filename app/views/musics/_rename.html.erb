<%= form_for @music, remote: true, html: {class: "form-inline"} do |f| %>
	<%= f.text_field :name, placeholder: params[:filename], html: {class: "form-control", style: "min-width:50%;"} %>
	<%= f.submit "Rename", class: "btn btn-default" %>
<% end %>

<script type="text/javascript">
	$(".form-inline").bind("ajax:success", function(e) {
  	$(this).append("<p class='alert alert-success' style='display:inline-block; line-height:0.1; margin-bottom:0;'>Success!</p>");
	}).bind("ajax:error", function(e) {
	  $(this).append("<p class='alert-danger alert' style='display:inline-block; line-height:0.1; margin-bottom:0;'>Uh-oh, something didn't work right.</p>");
	});
</script>
