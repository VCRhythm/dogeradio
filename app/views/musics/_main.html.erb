<p>Welcome! Welcome!</p>
<div class="row">
	<div class="content-block col-md-6">
		<h3>Featured Artist</h3>
		<div class="media">
			<%= link_to @featured_user, class: "pull-left" do %>
				<% if @featured_user.avatar.exists? %>
					<%= image_tag @featured_user.avatar.url(:thumb), class: "media-object" %>
				<% end %>
			<% end %>
			<div class="media-body">
				<h4 class="media-heading"><strong><%= link_to @featured_user.username, @featured_user, remote: true, class: "remote-link" %></strong></h4>
				<p><%=@featured_user.bio%></p>
			</div>
			<div class="list-group">
				<% @featured_user.musics[0..5].each do |track| %>
					<%=link_to playlist_ranks_path(@playlist, music_id: track.id), method: :post, remote: true, class: "list-group-item" do %>
						<span class="badge" style="background-color:white"><span class="glyphicon glyphicon-plus" style="color:green"></span></span>
						<%= track.name %>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
	<div class="content-block col-md-6">
		<h3>Top Tracks</h3>
		<div class="list-group">
			<% @top_most_played_tracks.each do |track| %>
				<%= link_to playlist_ranks_path(@playlist, music_id: track.id), method: :post, remote: true, class: "list-group-item" do %>
					<span class="badge" style="background-color:white"><span class="glyphicon glyphicon-plus" style="color:green"></span></span>
					<%= track.user.username + " - " + track.name %>
				<% end %>
			<% end %>
		</div>
	</div>
</div>

<div class="row">
<div class="content-block">
	<h3>Recent Tracks</h3>
	<% @new_tracks.each do |track| %>
		<%= link_to playlist_ranks_path(@playlist, music_id:track.id), method: "post", remote: true do %><%= track.user.username+" - "+track.name %> <span class="glyphicon glyphicon-plus" style="color:green"></span><% end %><br />
	<% end %>
</div>

<div class="content-block">
	<h3>Active Users</h3>
	<% @active_users.each do |user| %>
		<%= link_to user.username, user, remote: true %> (<%= pluralize(user.musics.count, "track") %>)<br />
	<% end %>
</div>
</div>
