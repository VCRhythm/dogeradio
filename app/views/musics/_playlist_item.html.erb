<li href="#" class="hover playlist-item list-group-item ui-state-default music_<%=music.id%> <% if playlist_counter==1 %>active<% end %>" style="padding-left:0; padding-top:0; padding-bottom:0;" id="playlist_<%=playlist_counter%>" data-music_id="music_<%=music.id%>" data-playlist_number="<%=playlist_counter%>">
	<div class="clickable" style="display:inline-block; width: 95%; padding-left:15px; padding-top:10px; padding-bottom:10px;"><%= music.name %></div>
	<div class="delete-div" style="display:inline-block; position: absolute; right:10px; top:30%;"><%= link_to playlist_ranks_path(playlist_id:@playlist.id, music_id:music.id, position: playlist_counter), method: "delete", remote: true, class: "delete-link" do %><span class="glyphicon glyphicon-remove"></span><% end %></div>

	<script type="text/javascript">
		$('#playlist_<%= playlist_counter %>').children('.clickable').click(function(){
			position = $(this).parent().data('playlist_number');
			updatePlayer(position);
			$('body').animate({scrollTop: $("#player").offset().top-70}, 500);
		});
	</script>
</li>
